function get_answer(possiblities, default, prompt)
    answer = "\n"

    while find(lcase(possiblities), answer) == -1
        write(prompt)
        answer = lcase(trim(readln()))
        answer = iif(answer == "", default, answer)
    endwhile

    return answer
stop
