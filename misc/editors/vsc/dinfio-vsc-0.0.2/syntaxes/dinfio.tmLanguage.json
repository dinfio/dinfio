{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dinfio",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#comments2"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#numbers_hex"
		},
		{
			"include": "#numbers_bin"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(if|else|elseif|while|for|return|yield|field|var|global|import|endif|endfor|endwhile|break|iif|ref|call|eval)\\b"
			}]
		},
		"entities": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(function|stop|class|endclass|start)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant",
				"match": "\\b(true|false|this|nothing|inf|nan)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function",
				"begin": "(?x)\n\\b(?=\n ([[:alpha:]_]\\w*)\\s*(\\()\n)\n",
				"end": "(\\()",
				"endCaptures": {
					"0": {
						"name": "keyword.operator"
					}
				}
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.percentage",
				"begin": "'",
				"end": "\n"
			}]
		},
		"comments2": {
			"patterns": [{
				"name": "comment.line.percentage",
				"begin": "#",
				"end": "\n"
			}]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b(?i:(\\d+\\.*\\d*(e[\\-\\+]?\\d+)?))(?=[^[:alpha:]_])\\b"
				}
			]
		},
		"numbers_hex": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b(?i:(0x\\h+))\\b"
				}
			]
		},
		"numbers_bin": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b([01]+b)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\""
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "\\(|\\)|\\+|\\-|=|/|\\*|%|\\\\|&|\\^|\\||<|>|\\[|\\]|{|}"
				}
			]
		}
	},
	"scopeName": "source.dinfio"
}